---
import "@/styles/global.css";
import { ScrollProgress } from "@/components/ui/scroll-progress";
import InteractiveParticleField from "@/components/ui/InteractiveParticleField";
import { DockBar } from "@/components/DockBar";
import { Toaster } from "@/components/ui/sonner";
import SplashCursor from "../ui/Animations/SplashCursor/SplashCursor";
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";

// Props for dynamic SEO
interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: string;
  canonical?: string;
}

const { 
  title, 
  description, 
  image, 
  type = "website",
  canonical
} = Astro.props;

// Preload critical resources
const preloadResources = [
        { as: "image", href: "/myimg.png", type: "image/png" },
        { as: "image", href: "/ANlogo.png", type: "image/png" }
];

// SEO constants to avoid duplication
  const SITE_URL = "https://www.abdelkbirnainiaa.me/";
  const SITE_TITLE = title || "Abdelkbir Nainiaa | Software Engineer";
  const SITE_DESCRIPTION = description || "Portfolio of Abdelkbir Nainiaa, a Software Engineer specializing in building modern, full-stack web applications and scalable SaaS solutions. Let's connect and build something amazing.";
  const PROFILE_IMAGE = image || "https://www.abdelkbirnainiaa.me/myimg.png";
  const SITE_LOGO = "https://www.abdelkbirnainiaa.me/myimg.png";
  const PAGE_URL = canonical || SITE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{SITE_TITLE}</title>
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta
      name="keywords"
      content="Abdelkbir Nainiaa, Software Engineer, Web Developer, Frontend Developer, Full-Stack Developer, React Developer, Astro Developer, SaaS, Portfolio, Morocco"
    />
    <meta name="google-site-verification" content="aed4be8cc16949c6" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="theme-color" content="#6366f1" />
    <style>
      html,
      body {
        text-align: center;
        scroll-behavior: smooth;
      }
    </style>
    <meta name="author" content="Abdelkbir Nainiaa" />
    <link rel="canonical" href={PAGE_URL} />
    <link rel="icon" type="image/png" href="/ANlogo.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Preload critical resources -->
    {preloadResources.map(resource => (
      <link rel="preload" href={resource.href} as={resource.as} type={resource.type}  />
    ))}
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://cdn.simpleicons.org" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={PAGE_URL} />
    <meta property="og:title" content={SITE_TITLE} />
    <meta property="og:description" content={SITE_DESCRIPTION} />
    <meta property="og:image" content={PROFILE_IMAGE} />
    <meta property="og:image:alt" content="Abdelkbir Nainiaa Portfolio Logo" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={PAGE_URL} />
    <meta property="twitter:title" content={SITE_TITLE} />
    <meta property="twitter:description" content={SITE_DESCRIPTION} />
    <meta property="twitter:image" content={PROFILE_IMAGE} />
    <meta property="twitter:image:alt" content="Abdelkbir Nainiaa Portfolio Logo" />

    <!-- Structured Data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Person",
          "@id": "https://www.abdelkbirnainiaa.me/#person",
          "name": "Abdelkbir Nainiaa",
          "url": "https://www.abdelkbirnainiaa.me/",
          "image": {
            "@type": "ImageObject",
            "url": "https://www.abdelkbirnainiaa.me/myimg.png",
            "width": 512,
            "height": 512
          },
          "sameAs": [
            "https://www.linkedin.com/in/abdelkbir-nainiaa/",
            "https://github.com/AbdelkbirNA"
          ],
          "jobTitle": "Software Engineer",
          "worksFor": {
            "@type": "Organization",
            "name": "Freelance"
          },
          "description": "Software Engineer specializing in building modern, full-stack web applications and scalable SaaS solutions using technologies like React, Astro, and Node.js.",
          "alumniOf": {
            "@type": "CollegeOrUniversity",
            "name": "ENSIASD"
          },
          "knowsAbout": [
            "Software Development",
            "Frontend Development",
            "Full-Stack Development",
            "SaaS Architecture",
            "React",
            "Astro",
            "JavaScript",
            "TypeScript",
            "Node.js",
            "Tailwind CSS",
            "SEO"
          ],
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Casablanca",
            "addressCountry": "MA"
          }
        },
        {
          "@type": "WebSite",
          "@id": "https://www.abdelkbirnainiaa.me/#website",
          "url": "https://www.abdelkbirnainiaa.me/",
          "name": "Abdelkbir Nainiaa Portfolio",
          "description": "Portfolio of Abdelkbir Nainiaa, Software Engineer specializing in full-stack development and SaaS solutions.",
          "publisher": {
            "@id": "https://www.abdelkbirnainiaa.me/#person"
          },
          "inLanguage": "en-US",
          "potentialAction": {
            "@type": "SearchAction",
            "target": "https://www.abdelkbirnainiaa.me/?s={search_term_string}",
            "query-input": "required name=search_term_string"
          }
        },
        {
          "@type": "WebPage",
          "@id": `${PAGE_URL}#webpage`,
          "url": PAGE_URL,
          "name": SITE_TITLE,
          "description": SITE_DESCRIPTION,
          "isPartOf": {
            "@id": "https://www.abdelkbirnainiaa.me/#website"
          },
          "about": {
            "@id": "https://www.abdelkbirnainiaa.me/#person"
          },
          "inLanguage": "en-US"
        }
      ]
    })} />
    <script is:inline>
      // Optimized theme script - runs immediately to prevent flash
      const getThemePreference = () => {
        if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof window !== "undefined") {
        // Simplified theme observer
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });

        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });
      }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <DockBar client:visible />
    <slot />
    <InteractiveParticleField client:idle />
    <SplashCursor client:idle />
    <ScrollProgress client:visible />
    <Toaster client:idle />


    <SpeedInsights />
    <Analytics />
  </body>
</html>
